{
  "name": "bundle-analysis",
  "version": "1.0.0",
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "size-check": "npm run build && npx next-bundle-analyzer",
    "unused-deps": "npx depcheck --ignores='@types/*,typescript,eslint*,prettier,@next/*'",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "audit-bundle": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js"
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
